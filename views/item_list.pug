extends layout 
block content
  div(style='margin-left:20px;margin-top:20px;margin-right:20px')
    h1= title
    div.home-links 
      a.home-link(href='/home/item/create') New Item

    table(style='width:100%;text-align:center', border='1')
      tr 
        th Item 
        th Category
        th Price ($) 
        th Stock 
      each item in item_list 
        tr
          td 
            a(href=item.url) #{item.title}
          td #{item.category.name}
          td #{item.price}
          td #{item.stock}